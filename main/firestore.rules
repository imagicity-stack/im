rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile may only be read by self. All writes are denied from client SDK.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // All business collections are server-side only through Admin SDK.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
